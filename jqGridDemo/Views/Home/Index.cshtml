@{
    ViewBag.Title = "jqGrid Demo Page";
}

<div style="margin-left:20px">
    <table id="jqGrid"></table>
    <div id="jqGridPager"></div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#jqGrid").jqGrid({
                url: '/Example',
                mtype: "GET",
                styleUI: 'Bootstrap',
                datatype: "json",
                colModel: [{
                    label: 'OrderID',
                    name: 'OrderID',
                    key: true,
                    width: 200
                },
                    {
                        label: 'Customer ID',
                        name: 'CustomerID',
                        width: 200
                    },
                    {
                        label: 'Order Date',
                        name: 'OrderDate',
                        width: 200
                    },
                    {
                        label: 'Freight',
                        name: 'Freight',
                        width: 200
                    },
                    {
                        label: 'Ship Name',
                        name: 'ShipName',
                        width: 200
                    }
                ],
                viewrecords: true,
                height: 'auto',
                rowNum: 20,
                pager: "#jqGridPager"
            });
        });
    </script>
}